<Window x:Class="EquationEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ad="http://schemas.xceed.com/wpf/xaml/avalondock"
        Title="MainWindow" Height="350" Width="355" 
        Loaded="Window_Loaded_1">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button Click="Button_Click_1" Width="100" HorizontalAlignment="Left" Grid.Row="0">New</Button>
        <ScrollViewer Grid.Row="1">
            <StackPanel >
                <ad:DockingManager>
                    <ad:LayoutRoot>
                        <ad:LayoutPanel>
                            <ad:LayoutAnchorablePane x:Name="root">
                                <!--<ad:LayoutAnchorable>
                                    <Grid Height="200"></Grid>
                                </ad:LayoutAnchorable>
                                <ad:LayoutAnchorable >
                                    <Grid Height="200"></Grid>
                                </ad:LayoutAnchorable>-->
                            </ad:LayoutAnchorablePane>
                        </ad:LayoutPanel>
                    </ad:LayoutRoot>
                </ad:DockingManager>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
